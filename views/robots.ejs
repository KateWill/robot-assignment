<!DOCTYPE html>
<html>
 <head>
    <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/header %>
   </header>
   <h1 class='center'>Robot Factory</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Robots</h3>
       <form action='/robots' method='POST'>
         <input type='text' name='name' placeholder='Robot Name' />
         <button class='btn btn-waves cyan darken-1' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Robot Name</th>
         <th>x</th>
       </thead>
       <tbody>
       
         <% robot.forEach( function(robot) { %>
          <% var href='/robots/delete/' + robot.replace(/ /g, '%20') %>
           <% var link='/robots/delete/' + robot %>
           
           <tr>
             <td><%= robot %></td>
             <td><a href=<%= link %> >Delete</a></td>
             
         <% }); %>
         
       </tbody>
     </table>
   </body>
</html>